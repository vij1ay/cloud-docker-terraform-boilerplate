pipeline {
  agent any

  stages {

    stage('Checkout') {
      steps {
        git 'https://github.com/vij1ay/cloud-docker-terraform-boilerplate.git'
      }
    }

    stage('Terraform Init') {
      steps {
        dir("aws-terraform") {
          sh 'terraform init'
        }
      }
    }

    stage('Terraform Apply') {
      steps {
        dir("aws-terraform") {
          sh 'terraform apply -auto-approve'
        }
      }
    }
  }
}
